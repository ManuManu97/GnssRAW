<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/server_connection">

    <EditTextPreference
        app:key="Insert address"
        app:title="Server address"
        app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sensor_settings">
        <MultiSelectListPreference
            app:key="@string/sensor_settings"
            app:entries="@array/sensor_values"
            app:entryValues="@array/sensor_values"
            app:title="Select Sensors"
        />



    </PreferenceCategory>

</PreferenceScreen>